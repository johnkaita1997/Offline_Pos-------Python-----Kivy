#:import utils kivy.utils
#: import Window kivy.core.window.Window
#:import Factory kivy.factory.Factory

<MySpinnerOption@SpinnerOption>:
    on_release: app.root.signin_widget.spinner_selected(self.text)

<LoginWindow>:
    name: "main"
    orientation: "vertical"
    canvas.before:
        Color:
            rgb: utils.get_color_from_hex('#ffffff')
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        spacing: 20
        orientation: 'vertical'

        Label:
            text: 'Cocab Tech Solutions Point Of Sale'
            size_hint_x: 1
            size_hint_y: None
            height: 30
            bold: True
            color: (1,1,1,1)
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex('#5B2437')
                Rectangle:
                    size: self.size
                    pos: self.pos

        BoxLayout:
            padding: 50
            spacing: 20
            orientation: 'horizontal'
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex('#ffffff')
                Rectangle:
                    size: self.size
                    pos: self.pos

            BoxLayout:
                orientation: 'vertical'
                size_hint_x: .6
                rgba: utils.get_color_from_hex('#003300')
                canvas.before:
                    Color:
                        rgb: utils.get_color_from_hex('#ffffff')
                    Rectangle:
                        size: self.size
                        pos: self.pos

                Label:
                    size_hint_x: 1
                    font_size: 30
                    text: "Cocab Tech Solutions"
                    color: utils.get_color_from_hex('#5B2437')

                Image:
                    source: 'BaseLogin/mainicon.jpg'
                    size: self.texture_size

                Label:
                    id: hey
                    size_hint_x: 1
                    halign: 'center'
                    text: "For modern, reliable: Desktop Apps, Android Apps, Websites, Blogs\nEmail: cocabsolutions@gmail.com\nMobile: 0729836000"
                    color: utils.get_color_from_hex('#5B2437')



            BoxLayout:
                padding: 20
                id: main_win.space_x, 50
                size_hint_x: .4
                rgba: utils.get_color_from_hex('#003300')
                canvas.before:
                    Color:
                        rgb: utils.get_color_from_hex('#ffb3b3')
                    Rectangle:
                        size: self.size
                        pos: self.pos


                BoxLayout:
                    spacing: 10
                    padding: 40
                    id: box
                    orientation: 'vertical'

                    BoxLayout:
                        id: unamebox
                        orientation: 'vertical'

                        Label:
                            font_size: 30
                            size_hint_x: 1
                            halign: 'center'
                            text: "Access Control"
                            color: utils.get_color_from_hex('#5B2437')


                    BoxLayout:
                        spacing: 10
                        id: unamebox
                        orientation: 'vertical'

                        Spinner:
                            option_cls: Factory.get('MySpinnerOption')
                            id: branch
                            size_hint_x: 1
                            text: "Select Branch"
                            size_hint_y: None
                            height: 40


                        TextInput:
                            id: email
                            size_hint_x: 1
                            hint_text: "Email - Type any letter"
                            multiline: False
                            write_tab: False
                            focus: True
                            size_hint_y: None
                            height: 40


                        TextInput:
                            id: password
                            size_hint_x: 1
                            size_hint_y: None
                            height: 40
                            hint_text: "Password"
                            multiline: False
                            write_tab: False
                            password: True


                        Button:
                            id: uid
                            size_hint_y: None
                            height: 40
                            text: "Login"
                            id: button
                            on_release: root.login_user()
